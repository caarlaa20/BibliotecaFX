<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.input.MouseEvent?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.blibliotecafx.Gestiones.GestionSocio"
      spacing="15" padding="20">

    <!-- Título de la sección -->
    <Label text="Gestión de Socios" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Formulario de entrada -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" minWidth="200" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Nombre:"/>
        <TextField fx:id="txtNombre" promptText="Ingrese el nombre"/>

        <Label text="DNI:"/>
        <TextField fx:id="txtDni" promptText="Ingrese el DNI"/>

        <Label text="Teléfono:"/>
        <TextField fx:id="txtTelefono" promptText="Ingrese el teléfono"/>

        <Label text="Email:"/>
        <TextField fx:id="txtEmail" promptText="Ingrese el email"/>

        <Label text="Fecha de Inscripción:"/>
        <TextField fx:id="txtFechaInscripcion" promptText="Ingrese la fecha (yyyy-mm-dd)"/>

        <Label text="Activo:"/>
        <CheckBox fx:id="chkActivo"/>
    </GridPane>

    <!-- Botones de acción -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Añadir" onAction="#onAñadirSocio" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Modificar" onAction="#onModificarSocio" style="-fx-background-color: #f1c40f; -fx-text-fill: white;"/>
        <Button text="Eliminar" onAction="#onEliminarSocio" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Buscar" onAction="#onBuscarSocio" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Listar Todos" onAction="#onListarTodosLosSocios" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <!-- Tabla para mostrar los socios -->
    <TableView fx:id="tablaSocios" minHeight="250" onMouseClicked="#onSocioSeleccionado">
        <columns>
            <TableColumn text="Nombre" fx:id="colNombre" prefWidth="150"/>
            <TableColumn text="DNI" fx:id="colDni" prefWidth="100"/>
            <TableColumn text="Teléfono" fx:id="colTelefono" prefWidth="120"/>
            <TableColumn text="Email" fx:id="colEmail" prefWidth="200"/>
            <TableColumn text="Fecha Inscripción" fx:id="colFechaInscripcion" prefWidth="120"/>
            <TableColumn text="Activo" fx:id="colActivo" prefWidth="80"/>
        </columns>
    </TableView>

</VBox>
