<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.blibliotecafx.Gestiones.GestionLibro" stylesheets="@styles.css">
    <HBox spacing="10">
        <Label text="Titulo:"/>
        <TextField fx:id="txtTitulo" promptText="Ingrese el titulo del libro"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Isbn:"/>
        <TextField fx:id="txtIsbn" promptText="Ingrese el isbn del libro"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Editorial:"/>
        <TextField fx:id="txtEditorial" promptText="Ingrese la Editorial del libro"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Año de publicación:"/>
        <TextField fx:id="txtAnioPublicacion" promptText="Ingrese el año de publicación del libro"/>
    </HBox>

    <!-- <HBox spacing="10">
        <Label text="Autor:"/>
        <TextField fx:id="txtAutor" promptText="Ingrese el autor del libro"/>
    </HBox>-->
    <HBox spacing="10">
        <Button text="Añadir Libro" onAction="#onAñadirLibro"/>
        <Button text="Modificar Libro" onAction="#onModificarLibro"/>
        <Button text="Eliminar Libro" onAction="#onEliminarLibro"/>
        <Button text="Buscar Libro" onAction="#onBuscarLibro"/>
        <Button text="Listar Todos" onAction="#onListarTodosLosLibros"/>
    </HBox>
    <TableView fx:id="tablaLibros">
        <columns>
            <TableColumn text="Titulo" fx:id="colTitulo" prefWidth="200"/>
            <TableColumn text="Isbn" fx:id="colIsbn" prefWidth="200"/>
            <TableColumn text="Editorial" fx:id="colEditorial" prefWidth="200"/>
            <TableColumn text="Año de publicación" fx:id="colAnioPublicacion" prefWidth="200"/>
            <!-- <TableColumn text="Autor" fx:id="colAutor" prefWidth="200"/>-->
        </columns>
    </TableView>
</VBox>
